<div class="caption center">
  <h1>Password_reset</h1>
  <%= form_with model: @user, url: password_reset_path(@token), method: :put do |f| %>
    <%= f.label :email %>
    <%= @user.email %></br>
    <%= f.label :password %></br>
    <%= f.password_field :password, class: 'utext font-noto' %></br>
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation, class: 'utext font-noto' %></br>
    <%= f.submit 'update', class: 'utext font' %>
  <% end %>
</div>
