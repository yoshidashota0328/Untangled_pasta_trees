<div class="caption center">
  <h1>ログイン</h1>
  <%= form_with model: @user, local: true do |f| %>
    <%= f.label :email %></br>
    <%= f.text_field :email, class: "text" %></br>
    <%= f.label :password %></br>
    <%= f.password_field :password, class: "text" %></br>
    <%= f.submit 'ログイン', class: "text" %>
  <% end %>
  <%= link_to '登録ページへ', new_user_path %>
  <a href="#">パスワードをお忘れの方はこちら</a>
</div>
