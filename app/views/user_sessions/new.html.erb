<div class="caption center">
  <h1>Login</h1>
  <%= form_with model: @user, local: true do |f| %>
    <%= f.label :email %></br>
    <%= f.text_field :email, class: "text" %></br>
    <%= f.label :password %></br>
    <%= f.password_field :password, class: "text" %></br>
    <%= f.submit 'login', class: "text" %>
  <% end %>
  <%= link_to 'Create_user', new_user_path %>
</div>
